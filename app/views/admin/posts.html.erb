<div class="container text-center">
app\views\admin\posts.html.erb
    <h3>Administrator</h3>
        <%= render "admin/nav_links" %>
        <table class="table table-dark table-striped" style="margin-top: 10px;">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Post</th>
                    <th scope="col">Author</th>
                    <th scope="col">Comments</th>
                </tr>
            </thead>    
            <tbody>
                <% @posts.each do |post| %>
                    <tr>
                        <th scope="row"><%= post.id %></th>
                        <th><%= link_to post.title.truncate(15), admin_post_path(post) %></th>
                        <th><%= post.user.full_name %></th>
                        <% # Size iz maybe used as count but with less database queries %>
                        <th><%= pluralize(post.comments.size, "Comment") %></th> 
                    </tr>
                <% end %>
            </tbody>
        </table>
</div>